<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bp" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EmployeeController">
   <center>
      <AnchorPane prefHeight="615.0" prefWidth="526.0">
         <children>
            <Pane layoutX="6.0" prefHeight="86.0" prefWidth="798.0" style="-fx-background-color: #fe6962;">
               <children>
                  <Label layoutX="56.0" layoutY="20.0" text="Employees List (Circular Linked List)">
                     <font>
                        <Font name="Arial" size="40.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <Pane layoutX="3.0" layoutY="86.0" prefHeight="367.0" prefWidth="796.0">
               <children>
                  <TableView fx:id="employeeTableview" layoutX="15.0" layoutY="14.0" prefHeight="350.0" prefWidth="762.0">
                    <columns>
                      <TableColumn fx:id="idTableColumn" prefWidth="68.0" text="Id" />
                      <TableColumn fx:id="lastNameTableColumn" prefWidth="174.0" text="lastName" />
                        <TableColumn fx:id="firstNameTableColumn" minWidth="8.0" prefWidth="157.0" text="firstName" />
                        <TableColumn fx:id="titleTableColumn" prefWidth="163.0" text="title" />
                        <TableColumn fx:id="birthdayTableColumn" prefWidth="199.0" text="birthday" />
                    </columns>
                  </TableView>
               </children>
            </Pane>
            <Pane layoutX="19.0" layoutY="462.0" prefHeight="153.0" prefWidth="761.0">
               <children>
                  <ButtonBar layoutX="1.0" layoutY="14.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="761.0">
                    <buttons>
                        <Button layoutX="202.0" layoutY="17.0" mnemonicParsing="false" onAction="#sizeOnAction" text="Size" />
                        <Button layoutX="685.0" layoutY="17.0" mnemonicParsing="false" onAction="#containsOnAction" text="Contains" />
                        <Button layoutX="135.0" layoutY="17.0" mnemonicParsing="false" onAction="#addSortedOnAction" text="Sort by Name" />
                        <Button layoutX="135.0" layoutY="17.0" mnemonicParsing="false" onAction="#addFirstOnAction" text="Sort by Id" />
                      <Button mnemonicParsing="false" onAction="#addOnAction" text="Add" />
                    </buttons>
                  </ButtonBar>
                  <ButtonBar layoutY="57.0" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="761.0">
                    <buttons>
                        <Button layoutX="202.0" layoutY="17.0" mnemonicParsing="false" onAction="#clearOnAction" text="Clear" />
                        <Button layoutX="125.0" layoutY="17.0" mnemonicParsing="false" onAction="#removeFirstOnAction" text="Remove Last" />
                        <Button layoutX="525.0" layoutY="17.0" mnemonicParsing="false" onAction="#removeOnAction" text="Remove" />
                        <Button layoutX="104.0" layoutY="17.0" mnemonicParsing="false" onAction="#getLastOnAction" text="Get Next" />
                      <Button mnemonicParsing="false" onAction="#getFirstOnAction" text="Get Prev" />
                    </buttons>
                  </ButtonBar>
               </children>
            </Pane>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
